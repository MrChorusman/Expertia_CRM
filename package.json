{
  "name": "expertia-crm",
  "version": "1.9.0",
  "description": "CRM para Expertia Medical Solutions SL.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder --publish=never",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux"
  },
  "author": "Expertia Medical Solutions SL",
  "dependencies": {
    "firebase": "^10.14.1",
    "firebase-admin": "^13.4.0"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1",
    "vercel": "^48.1.6"
  },
  "build": {
    "appId": "com.expertia.crm",
    "productName": "Expertia CRM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!archive/**/*",
      "!*.md",
      "!test-*.js",
      "!debug-*.js",
      "!verify-*.js",
      "!analyze-*.mjs",
      "!compare-*.mjs",
      "!migrate-*.mjs",
      "!refactor-*.mjs",
      "!review-*.mjs",
      "!query-*.js",
      "!simple-*.js",
      "!websdk-*.mjs",
      "!firebase-*.js",
      "!check-*.js",
      "!force-*.js",
      "!monitor-*.js",
      "!quick-*.js",
      "!manual-*.md",
      "!testing-*.md",
      "!ESTADO-*.md",
      "!CHECKPOINT-*.md",
      "!PROJECT-*.md",
      "!SISTEMA-*.md",
      "!resumen-*.md",
      "!expertia.crm",
      "!backup/**/*",
      "!docs/**/*",
      "!firebase_data/**/*",
      "!functions/**/*",
      "!js/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
